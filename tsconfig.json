{
  "compilerOptions": {
    "target": "ES6",
    "lib": ["es2021", "dom", "es2015"],
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "rootDir": "./src",
    "allowJs": true,
    "declaration": true,
    "sourceMap": true,
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": false,
    "skipLibCheck": true
  },
  "include": ["./src"],
  "exclude": [
    "src/index.d.ts",
    "node_modules",
    "dist",
    "features",
    "container",
    "test"
  ]
}
