{
  "compilerOptions": {
    "target": "es5",
    "lib": ["es2021", "dom", "es2015"],
    "module": "commonjs",
    "noEmit": true,
    "moduleResolution": "nodenext",
    "rootDir": "./src",
    "allowJs": true,
    "declaration": true,
    "sourceMap": true,
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": false,
    "skipLibCheck": true
  },
  "include": ["./src"],
  "exclude": ["node_modules", "dist", "features", "container"]
}
